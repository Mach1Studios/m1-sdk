<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorControlActivated">@color/yellow</item>
        <item name="android:colorControlNormal">@color/dark_gray</item>


    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="mediumText">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTintMode">src_over</item>
        <item name="android:progressBackgroundTint">@color/dark_gray</item>
        <item name="android:progressTint">@color/dark_gray</item>
        <item name="android:colorControlActivated">@color/dark_gray</item>
    </style>

</resources>
