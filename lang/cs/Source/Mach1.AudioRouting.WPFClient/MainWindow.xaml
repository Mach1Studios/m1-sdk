<Window x:Class="Mach1.AudioRouting.WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mach1.AudioRouting.WPFClient"
        mc:Ignorable="d"
        Title="M1 Routing"
        Height="350"
        Width="400"
        Closing="MainWindow_OnClosing">
    <Window.Resources>

        <Style TargetType="TextBlock"
               BasedOn="{StaticResource {x:Type TextBlock}}">

            <Setter Property="Margin"
                    Value="10,5" />

            <Setter Property="HorizontalAlignment"
                    Value="Left" />

        </Style>

        <Style TargetType="Button"
               BasedOn="{StaticResource {x:Type Button}}">

            <Setter Property="VerticalAlignment"
                    Value="Center" />

            <Setter Property="HorizontalAlignment"
                    Value="Left" />

            <Setter Property="Width"
                    Value="80" />
            
            <Setter Property="Margin"
                    Value="0,0,5,0"/>

        </Style>

        <Style TargetType="Slider"
               BasedOn="{StaticResource {x:Type Slider}}">

            <Setter Property="Margin"
                    Value="10,5" />

        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Text="Multichannel"
                           Grid.Column="0" 
                           Grid.Row="0"/>

                <StackPanel Grid.Column="1"
                            Grid.Row="0"
                            Orientation="Horizontal">

                    <Button Content="Load File..."
                            Click="ButtonLoadMultichannelFile_OnClick" />
                    
                    <Button Content="Play"
                            x:Name="ButtonPlayMultichannelFile"
                            IsEnabled="False"
                            Click="ButtonPlayMultichannelFile_OnClick"/>
                    
                    <Button Content="Stop"
                            x:Name="ButtonStopMultichannelFile"
                            IsEnabled="False"
                            Click="ButtonStopMultichannelFile_OnClick"/>

                </StackPanel>
                
                <TextBlock Text="Current file:"
                           Grid.Column="0"
                           Grid.Row="1"/>
                
                <TextBlock x:Name="TextBlockMultichannelFileName"
                           Grid.Column="1"
                           Grid.Row="1"/>

            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Slider Value="0.5"
                        Maximum="1.0"
                        Grid.Column="0" />

                <TextBlock Text="-6.6"
                           Grid.Column="1" />

            </Grid>

        </Grid>
        
        <Separator Grid.Row="1"
                   Margin="5"/>

        <Grid Grid.Row="2"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock Text="M/St Omni"
                           Grid.Column="0"
                           Grid.Row="0"/>

                <Button Content="Load File..."
                        Grid.Column="1"
                        Grid.Row="0"
                        Click="ButtonLoadOmniFile_OnClick"/>

                <TextBlock Text="Current file:"
                           Grid.Column="0"
                           Grid.Row="1" />

                <TextBlock x:Name="TextBlockOmniFileName"
                           Grid.Column="1"
                           Grid.Row="1" />

            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Slider Value="0.5"
                        Maximum="1.0"
                        Grid.Column="0" />

                <TextBlock Text="-6.6"
                           Grid.Column="1" />

            </Grid>
        </Grid>

        <Grid Grid.Row="3"
              Height="150"
              VerticalAlignment="Center">

            <Grid VerticalAlignment="Bottom"
                  Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Orientation Input"/>

                <ComboBox VerticalAlignment="Bottom"
                          Grid.Column="1" />

            </Grid>

        </Grid>

    </Grid>
</Window>
